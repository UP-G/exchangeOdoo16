<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="efficiency_saler_report_view_pivot" model="ir.ui.view">
            <field name="name">efficiency.saler.report.pivot</field>
            <field name="model">efficiency.saler.report</field>
            <field name="arch" type="xml">
                <pivot string="Analysis" sample="1">
                    <field name="manager_name" type="row"/>
                    <field name="client_name" type="col"/>
                </pivot>
            </field>
        </record>

        <record id="efficiency_saler_report_view_tree" model="ir.ui.view">
            <field name="name">efficiency.saler.report.tree</field>
            <field name="model">efficiency.saler.report</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="manager_name" optional="show"/>
                    <field name="client_name" optional="show"/>
                    <field name="type_client" optional="show"/>
                    <field name="type_debts" optional="show"/>
                    <field name="date" optional="show"/> 
                    <field name="plan_predicted_percentage" optional="show" widget="percentage"/>
                    <field name="prediction" optional="show"/>
                    <field name="turnover_this_mounth" optional="show"/>
                    <field name="turnover_previous_mounth" optional="show"/> 
                    <field name="debt" optional="show"/>
                    <field name="overdue_debt" optional="show"/>
                    <field name="task_count" optional="show"/> 
                    <field name="plan" optional="show"/>
                    <field name="interaction_count" optional="show"/>
                    <field name="calls_in_count" optional="show"/>
                    <field name="calls_out_count" optional="show"/>
                    <field name="calls_minute" optional="show"/>
                    <field name="sonder_calls_count" optional="show"/>

                </tree>
            </field>
        </record>

        <record id="efficiency_saler_report_view_graph" model="ir.ui.view">
            <field name="name">efficiency.saler.report.graph</field>
            <field name="model">efficiency.saler.report</field>
            <field name="arch" type="xml">
                <graph string="Saller Report" sample="1">
                    <field name="manager_name"/>
                    <field name="client_name"/>
                    <field name="plan" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="efficiency_saler_report_view_form" model="ir.ui.view">
            <field name="name">efficiency.saler.report.form</field>
            <field name="model">efficiency.saler.report</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="manager_name" class="o_text_overflow" />
                                <field name="type_client"/>
                                <field name="type_debts"/>
                                <field name="client_name" class="o_text_overflow" />
                            </group> 
                            <group>
                                <field name="plan"/>
                                <field name="prediction"/>
                                <field name="plan_predicted_percentage" widget="percentage"/>
                                <field name="turnover_this_mounth"/>
                                <field name="turnover_previous_mounth"/>
                                <field name="debt"/>
                                <field name="overdue_debt"/>
                                <field name="task_count"/> 
                                <field name="interaction_count"/>
                                <field name="calls_in_count"/>
                                <field name="calls_out_count"/>
                                <field name="calls_minute"/>
                                <field name="sonder_calls_count"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="efficiency_saler_report_search">
            <field name="name">efficiency.saler.report.search</field>
            <field name="model">efficiency.saler.report</field>
            <field name="arch" type="xml">
                <search string="Report search">
                    <field name="manager_name" string="Manager or Client" filter_domain="['|', ('manager_name', 'ilike', self), ('client_name', 'ilike', self)]"/>
                    <field name="manager_name" class="o_text_overflow" />
                    <field name="client_name" class="o_text_overflow" />
                    <field name="client_1c_id"/>
                    <separator/>
                    <filter string="Main outside clients" name="filter_main_client_outsider" domain="[('type_client', '=', '4_main'),('plan_predicted_percentage','&lt;=','0.9')]"/>
                    <filter string="Most outside clients" name="filter_client_outsider" domain="[('type_client', 'in', ['4_main','5_other']),('plan_predicted_percentage','&lt;=','0.9')]"/>
                    <filter string="All outsiders" name="filter_main_client_outsider" domain="[('plan_predicted_percentage','&lt;=','0.9')]"/>
                    <separator/>
                    <filter string="Main clients" name="filter_is_main" domain="[('type_client', '=', '4_main')]"/>
                    <filter string="Main and second clients" name="filter_is_main_second" domain="[('type_client', 'in', ['4_main','5_other'])]"/>
                    <filter string="Overdued debts" name="filter_is_main" domain="[('overdue_debt', '>', '0')]"/>
                    <separator/>
                    <filter string="Last 31 days" name="filter_last_month_creation" domain="[('date','&gt;', (context_today() - datetime.timedelta(days=31)).strftime('%Y-%m-%d'))]"/>
                    <group expand="0" string="Group By">
                        <filter string="Manager" name="manager" domain="[]" context="{'group_by':'manager_name'}"/>
                        <filter string="Client" name="client" domain="[]" context="{'group_by':'client_name'}"/>
                        <filter string="Client Type" name="client_type" domain="[]" context="{'group_by':'type_client'}"/>
                        <filter string="Period" name="date" domain="[]" context="{'group_by':'date:month'}"/>
                   </group>
                </search>
            </field>
        </record>

        <record id="efficiency_saler_report_action" model="ir.actions.act_window">
            <field name="name">Efficiency Saler</field>
            <field name="res_model">efficiency.saler.report</field>
            <field name="view_mode">pivot,graph,form,tree</field>
            <field name="context">{
                'group_by': ['manager_name', 'type_client', 'client_name'], 
                'pivot_row_groupby': ['date:month', 'manager_name', 'type_client', 'client_name']
                'pivot_measures':  ['__count', 'plan', 'prediction', 'plan_predicted_percentage', 'turnover_this_mounth', 'turnover_previous_mounth', 'debt', 'overdue_debt', 
                    'task_count', 'interaction_count', 'calls_in_count', 'calls_out_count', 'calls_minute', 'sonder_calls_count'],
                'pivot_column_groupby': [],
                'search_default_filter_main_client_outsider': 1,
                }</field>
            <field name="domain">[]</field>
        <field name="search_view_id" ref="efficiency_saler_report_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No data yet!
                </p><p>
                    Start scheduling activities on your opportunities
                </p>
            </field>
        </record>

</odoo>
 