<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_open_tmtr_exchange_business_type" model="ir.actions.act_window">
        <field name="name">business_type 1C</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tmtr.exchange.1c.business_type</field>
        <field name="view_mode">tree,form</field>
        <field name="domain"></field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Config
            </p>
        </field>
    </record>

    <record id="view_tmtr_exchange_business_type_tree" model="ir.ui.view">
        <field name="name">business_type 1C</field>
        <field name="model">tmtr.exchange.1c.business_type</field>
        <field name="arch" type="xml">
            <tree multi_edit="1">
                <field name="ref" optional="show"/>
                <field name="code" optional="show"/>
                <field name="name" optional="show"/>
            </tree>
        </field>
    </record>

     <record id="view_tmtr_exchange_business_type_form" model="ir.ui.view">
        <field name="name">tmtr.exchange.1c.business_type.form</field>
        <field name="model">tmtr.exchange.1c.business_type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="ref" optional="show"/>
                            <field name="code" optional="show"/>
                        </group> 
                        <group>
                            <field name="name" optional="show"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>

    </record>

    <record id="action_tmtr_exchange_business_type" model="ir.actions.act_window">
        <field name="name">business_type 1C</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tmtr.exchange.1c.business_type</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create business_type
            </p>
        </field>
    </record>

</odoo>
